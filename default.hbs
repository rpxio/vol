<!DOCTYPE html>
<html lang="{{@site.locale}}">
  <head>
    <title>{{meta_title}}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />

    {{ghost_head}}
  </head>
  <body class="flex flex-col justify-between {{body_class}}">

    <div class="container max-w-2xl mx-auto">
      <header>

        <nav class="flex flex-col sm:flex-row justify-between mb-12 sm:mb-8 mt-6 sm:mt-6 px-6 md:px-0" role="navigation">

        <h1 class="hidden">Navigation</h1>

          <div>
            <a href="/" class="text-gray-900 text-lg no-underline font-bold">{{@site.title}}</a>
          </div>

          <ul class="flex mt-2 sm:mt-0 space-x-4">
            {{navigation}}

            {{#unless @member}}
              <a class="px-py px-1 text-blue-500 font-medium" href="#/portal">Subscribe</a>
            {{else}}
              <a class="px-py px-1 text-blue-500 font-medium" href="#/portal/account">Account</a>
            {{/unless}}
          </ul>
        </nav>
      </header>

      <main class="container max-w-6xl px-4 mx-auto mb-8">
        {{{body}}}
      </main>

    </div>

    <footer class="mt-8 p-8">
      <div class="container max-w-2xl mx-auto">
        {{navigation type="secondary"}}
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.1/dist/alpine.min.js" defer></script>
    {{ghost_foot}}
  </body>
</html>
